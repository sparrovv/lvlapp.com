<!DOCTYPE html>
<html>
  <head>
    <title>LvlApp - <%= yield(:title) %></title>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Open%20Sans">
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <script>
      LApp.currentUser = <%= raw((current_user).to_json ) %>;
    </script>
  </head>

  <body class="<%= current_user ? 'signed-in' : '' %>">
    <%= render 'shared/navbar' %>

    <div class="container">

      <%= flash_messages %>

      <div class="row">
        <%= yield %>
      </div>

      <div class="row">
      <hr>
      </div>
    </div>

    <%= render 'shared/footer' %>

    <%= render('shared/google_analytics') if render_ga? %>
  </body>
</html>
