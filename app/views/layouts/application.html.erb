<!DOCTYPE html>
<html>
  <head>
    <title>LvlApp - level up your second language. Listen, learn, repeat</title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <script>
      LApp.currentUser = <%= raw((current_user).to_json ) %>;
    </script>
  </head>

  <body class="<%= current_user ? 'signed-in' : '' %>">
    <%= render 'shared/navbar' %>

    <div class="container">
      <div class="row">
        <%= yield %>
      </div>

      <div class="row">
      <hr>
      </div>

      <%= render 'shared/footer' %>
    </div>

    <%= render('shared/google_analytics') if Rails.env == 'production' %>
  </body>
</html>
